<%- include('../cabecalho') -%>
<main role="main">
    <!-- Three columns of text below the carousel -->
    <div class="row">
        <div class="col-lg-4">
            <div class="card bg-danger mb-3">
                <div class="card-header text-white">Quadra</div>
                <div class="card-body bg-white text-dark">
                    <h5 class="card-title">Pagamento de quadra</h5>
                    <form method="POST">
                        <div class="form-group">
                            <label for="horaI">Horário</label>
                            <select name="hora" class="custom-select">
                                <option selected>Selecione o horário</option>
                                <option value="01:00">01:00</option>
                                <option value="02:00">02:00</option>
                                <option value="03:00">03:00</option>
                                <option value="04:00">04:00</option>
                                <option value="05:00">05:00</option>
                                <option value="06:00">06:00</option>
                                <option value="07:00">07:00</option>
                                <option value="08:00">08:00</option>
                                <option value="09:00">09:00</option>
                                <option value="10:00">10:00</option>
                                <option value="11:00">11:00</option>
                                <option value="12:00">12:00</option>
                                <option value="13:00">13:00</option>
                                <option value="14:00">14:00</option>
                                <option value="15:00">15:00</option>
                                <option value="16:00">16:00</option>
                                <option value="17:00">17:00</option>
                                <option value="18:00">18:00</option>
                                <option value="19:00">19:00</option>
                                <option value="20:00">20:00</option>
                                <option value="21:00">21:00</option>
                                <option value="22:00">22:00</option>
                                <option value="23:00">23:00</option>
                                <option value="24:00">24:00</option>
                            </select>
                            <small id="dataCaixa" class="form-text text-muted">Aqui você deve informar o horário de
                                início do aluguel da quadra.</small>
                        </div>
                        <div class="form-group">
                            <label for="horaI">Quadra</label>
                            <select name='quadra_id' class="custom-select">
                                <option value="0" selected>Selecione a quadra</option>
                                <% Quadras.forEach(function(quadra){ %>
                                <option value="<%=quadra.id%>"><%=quadra.nome%></option>
                                <%});%>
                            </select>
                            <small id="dataCaixa" class="form-text text-muted">Aqui você deve informar o horário de
                                início do
                                aluguel da quadra.</small>
                        </div>
                        <button type="submit" class="btn btn-primary" style="width: 80px;">Abrir</button>
                        
                    </form>
                </div>
            </div>
        </div><!-- /.col-lg-4 -->
        <div class="col-lg-8">
            <div class="card bg-danger mb-3 overflow-auto" style="height: 450px;">
                <div class="card-header text-white">Quadra alugadas</div>
                <div class="card-body bg-white text-dark">
                    <h5 class="card-title">Alugueis do dia</h5>
                    <table class="table">
                        <thead class="thead-red">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Quadra</th>
                                <th scope="col">Horário</th>
                                <th scope="col">Valor</th>
                                <th scope="col">Excluir</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% Alugueis.forEach(function(aluguel){ %>
                            <tr>
                                <th scope="row"><%=aluguel.id%></th>
                                <td><%=aluguel.Quadra.nome%></td>
                                <td><%=aluguel.hora%></td>
                                <td>R$ <%=aluguel.valor.toLocaleString('pt-br', {minimumFractionDigits: 2})%></td>
                                <td><a href="/caixa/quadra/<%=aluguel.id%>" class="btn btn-danger" style="width: auto;"><i class="fas fa-trash"></i></a></td>
                            </tr>
                            <%});%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div><!-- /.col-lg-4 -->
    </div><!-- /.row -->
    <%- include('../rodape') -%>